{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "nodenext",
        "lib": [
            "esnext",
            "dom"
        ],
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}